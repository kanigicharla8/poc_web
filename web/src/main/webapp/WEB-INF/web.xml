<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>BNSF JBoss POC</display-name>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:fuse/jboss-fuse-config.xml</param-value>
    </context-param>

    <listener>
        <listener-class>com.bnsf.drools.poc.web.ContextLoaderListener</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
